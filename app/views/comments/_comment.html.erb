<div id="comment-container-<%=comment.id%>" class="comment <%=level>0 ? "replay" : ""%>" <%=level>0 ? "data-level='#{level}'" : ""%> >
  <div class="wrapper">
    <div class="text">
      <div class="head">
        <span class="commenter"><%= comment.commentator_name %></span>
        <span class="date"><%=t(".created",:time=>I18n.l(comment.created_at, :format => :long))%></span>
        <% if can?(:destroy, comment) %>
          <span class="delete"><%=link_to image_tag("delete.jpg",:alt=>"Delete".t),commentable_path(comment),:method=>:delete,:confirm=>t("Are you sure?"),:remote=>true %></span>
        <% end %>
      </div>
      <div class="comment-body" id="comment-body-<%=comment.id%>">
        <p>
          <%= comment.body %>
        </p>
        <%= link_to t(".reply"),reply_comment_comments_path(comment),:remote=>true if can?(:reply,comment,commentable_object(comment.commentable)) %>
      </div>
    </div>
  </div>
</div>
<div class="clear"></div>
